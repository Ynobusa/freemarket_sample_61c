.order-wrapper
  =render "devise/shared/header2"
  .order
    .order__top
      購入内容の確認
    .order__info
      .order__info__box
        .order-image
          =image_tag "m48176654670_1.jpg", class: "photo"
        .order-text
          .order-text__name
            Acne studios ビッグシルエットギンガムチェックシャツ 46
          .order-text__price ¥7,500 （税込）送料込み
    .order__amount
      .order__amount__price
        %p.amount-text 支払金額:
        %p.amount-price ¥7,500
        %br
      .order__amount__point ポイントを使用(所持ポイント:0)
    .order__payment-method
      .order__payment-method__box
        %p.method 支払い方法
        %p.method-change 変更する
      .card-info
        クレジットカード
      = image_tag("https://upload.wikimedia.org/wikipedia/commons/thumb/6/6a/Logo_Visa.svg/2000px-Logo_Visa.svg.png", alt: "visa", size: '45x17')
      .card-info__number
        = "**** **** ****" + @default_card_information.last4
      %br
      .card-info__expire 有効期限
      - exp_month = @default_card_information.exp_month.to_s
      - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
      = exp_month + " / " + exp_year
    .order__shipment-address
      .order__shipment-address__box
        %p.address 配送先
        %p.address-change 変更する
        %p.postcode 
          〒 000-0000
          %br
          東京都 千代田区 hogehoge 1-1-1
          %br
          Name Namae
      %br
      .order__btn
        = form_with url: pay_orders_path, action: :pay, method: :post, local: true do |f|
          = f.submit "購入する", class: "order__btn__box"
  =render "devise/shared/footer2"
