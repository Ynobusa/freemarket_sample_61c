.header3
  .header3__logo
    = link_to root_path do
      .header3__logo__image
    .header3__logo__progress
      = image_tag "step4.png", class: "image", size: "450x35"

.cardsContents
  .cardsContents__title
    支払い方法
  .cardsContents__entry
    .cardsContents__entry__item
      カード番号&nbsp;&nbsp;&nbsp;
      = image_tag "must.png", class: "image", size: "30x16"
    = form_with class: "cardsContents__form" do |f|
      =f.text_field :number, placeholder: "半角数字のみ", class: "cardsContents__form__text", maxlength: "16"
    .cardsContents__entry__image
      %li
        = image_tag("https://upload.wikimedia.org/wikipedia/commons/thumb/6/6a/Logo_Visa.svg/2000px-Logo_Visa.svg.png", alt: "visa", size: '45x17')
      %li
        = image_tag("https://upload.wikimedia.org/wikipedia/commons/thumb/2/2a/Mastercard-logo.svg/1280px-Mastercard-logo.svg.png", alt: "master", size: '25x20')
      %li
        = image_tag("https://upload.wikimedia.org/wikipedia/commons/thumb/7/79/Saison_card_logo.svg/1024px-Saison_card_logo.svg.png", alt: "saison", size: '25x20')
      %li
        = image_tag("https://upload.wikimedia.org/wikipedia/commons/thumb/4/40/JCB_logo.svg/600px-JCB_logo.svg.png", alt: "jcb", size: '25x20')
      %li
        = image_tag("https://upload.wikimedia.org/wikipedia/commons/thumb/f/fa/American_Express_logo_%282018%29.svg/1202px-American_Express_logo_%282018%29.svg.png", alt: "americanexpress", size: '25x20')
      %li
        = image_tag("https://clipartart.com/images/diners-club-logo-clipart.png", alt: "dinersclub", size: '25x20')
      %li
        = image_tag("https://blog.mudora.jp/wp-content/uploads/2013/11/disc_5121.png", alt: "discover", size: '30x25')
    .cardsContents__entry__item
      有効期限&nbsp;&nbsp;&nbsp;
      = image_tag "must.png", class: "image", size: "30x16"
    .cardsContents__monthForm
      %form.validatedDateForm
        %select#validated_date_month
          %option{value: "1"} 01
          %option{value: "2"} 02
          %option{value: "3"} 03
          %option{value: "4"} 04
          %option{value: "5"} 05
          %option{value: "6"} 06
          %option{value: "7"} 07
          %option{value: "8"} 08
          %option{value: "9"} 09
          %option{value: "10"} 10
          %option{value: "11"} 11
          %option{value: "12"} 12
        %label
          月
    .cardsContents__yearForm
      %form.validatedDateForm
        %select#validated_date_year
          %option{value: "2020"} 20
          %option{value: "2021"} 21
          %option{value: "2022"} 22
          %option{value: "2023"} 23
          %option{value: "2024"} 24
          %option{value: "2025"} 25
          %option{value: "2026"} 26
          %option{value: "2027"} 27
          %option{value: "2028"} 28
        %label
          年
    .cardsContents__icon
      = fa_icon("chevron-down")
    .cardsContents__icon2
      = fa_icon("chevron-down")
    .cardsContents__entry__item
      セキュリティコード&nbsp;&nbsp;&nbsp;
      = image_tag "must.png", class: "image", size: "30x16"
    = form_with class: "cardsContents__form" do |f|
      =f.text_field :security_number, placeholder: "カード背面4桁もしくは3桁の番号", class: "cardsContents__form__text", maxlength: "4"
    .cardsContents__question
      = icon('fas', 'question-circle',class:"cardsContents__question--icon")
      %a(href="https://www.mercari.com/jp/box/qa45a372693140314/")カード裏面の番号とは？
    .cardsContents__btn
    = link_to create_accounts_path, class: "cardsContents__btn cardsContents__btn__next" do
      次へ進む
= render 'devise/shared/footer4'

