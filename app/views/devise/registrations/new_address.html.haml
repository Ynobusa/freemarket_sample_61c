      お名前&nbsp;&nbsp;&nbsp;
      = image_tag "must.png", class: "image", size: "30x16"
    =form_with class: "contents5__form" do |f|
      =f.text_field :last_name, placeholder: "例）山田", class: "contents5__form__text"
    =form_with class: "contents5__form" do |f|
      =f.text_field :first_name, placeholder: "例）彩", class: "contents5__form__text"
