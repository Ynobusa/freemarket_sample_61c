.header
  .header__container
    .headerTop
      =link_to root_path, class: "headerTop__link" do
        =image_tag 'fmarket_logo_red.svg', class: 'headerTop__link__image'
      =form_with class: "headerTop__form" do |f|
        =f.text_field :text, placeholder: "何かお探しですか？", class: "headerTop__form__text", autocomplete: 'off'
        = button_tag type: 'submit', class: "headerTop__form__submit" do
          = fa_icon 'search', class: "headerTop__form__submit__icon"
    .headerBottom
      .headerBottom__search
        .headerBottom__search__category.hoverList
          =link_to categorized_items_path, class: "headerBottom__search__category__link" do
            = fa_icon 'list', class: "headerBottom__search__category__link__icon"
            カテゴリーから探す
          %ul.hoverList__list.leftLists
            %li.nestList
              =link_to "/", class: "hoverList__list__link" do
                レディース
              %ul.nestList__list
                %li
                  =link_to "/", class: "nestList__list__link" do
                    トップス
                %li
                  =link_to "/", class: "nestList__list__link" do
                    アウター/ジャケット
            %li
              =link_to "/", class: "hoverList__list__link" do
                メンズ
        .headerBottom__search__brand.hoverList
          =link_to branded_items_path, class: "headerBottom__search__brand__link" do
            = fa_icon 'tag', class: "headerBottom__search__category__link__icon"
            ブランドから探す
          %ul.hoverList__list.leftLists
            %li
              =link_to "/", class: "hoverList__list__link" do
                シャネル
            %li
              =link_to "/", class: "hoverList__list__link" do
                ナイキ
            %li
              =link_to "/", class: "hoverList__list__link" do
                ルイ ヴィトン
            %li
              =link_to "/", class: "hoverList__list__link" do
                シュプリーム
            %li
              =link_to "/", class: "hoverList__list__link" do
                アディダス
            %li
              =link_to "/", class: "hoverList__list__link" do
                ブランド一覧
      %ul.headerBottom__signList
        %li
          =link_to users_path, class: "headerBottom__signList__signup" do
            新規会員登録
        %li
          =link_to new_user_session_path, class: "headerBottom__signList__login" do
            ログイン
